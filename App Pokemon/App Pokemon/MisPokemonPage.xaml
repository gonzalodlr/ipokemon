<Page xmlns:my="using:Dracofire" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_Pokemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="PokemonsPage"
    x:Class="App_Pokemon.MisPokemonPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/AssetsDracofireGDLRS/imFondo.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <RelativePanel Margin="0,100,0,0">
            <my:DracofireGDLRS x:Name="miGolbat" Height="425" Width="405"/>
            <TextBlock x:Name="tbNombre" TextWrapping="Wrap" Text="Nombre: " FontSize="24"
FontWeight="Bold" RelativePanel.RightOf="miGolbat"/>
            <TextBlock x:Name="tbCategoria" TextWrapping="Wrap" Text="Categoria: " FontSize="24"
FontWeight="Bold" RelativePanel.Below="tbNombre" RelativePanel.RightOf="miGolbat"/>
            <TextBlock x:Name="tbDesc" TextWrapping="Wrap" Text="Descripción: " FontSize="20"
RelativePanel.Below="tbCategoria" RelativePanel.RightOf="miGolbat"/>
        </RelativePanel>

    </Grid>
   
</Page>
